# 环境配置示例文件
# 复制为 .env 并填写实际值

# 邮件发送服务配置（选择其中一个）
MAILCHANNELS_API_KEY=your_mailchannels_api_key
RESEND_API_KEY=your_resend_api_key
SENDGRID_API_KEY=your_sendgrid_api_key

# 发送邮箱域名
SENDER_DOMAIN=yourdomain.com
SENDER_EMAIL=noreply@yourdomain.com
SENDER_NAME=轻量邮箱系统

# 系统配置
MAX_ATTACHMENT_SIZE=10485760  # 10MB
DEFAULT_PAGE_SIZE=20
ENVIRONMENT=development

# 速率限制配置
RATE_LIMIT_API_CALLS=60      # 每分钟API调用次数
RATE_LIMIT_EMAIL_SEND=10     # 每小时邮件发送数量
RATE_LIMIT_LOGIN_ATTEMPTS=5  # 每15分钟登录尝试次数

# 安全配置
TOKEN_EXPIRY_DAYS=30
SESSION_TIMEOUT_HOURS=24

# 功能开关
ENABLE_EMAIL_QUEUE=true
ENABLE_ATTACHMENT_SCAN=false
ENABLE_SPAM_FILTER=false
ENABLE_PUSH_NOTIFICATIONS=false

# 调试配置
DEBUG_MODE=false
LOG_LEVEL=info
